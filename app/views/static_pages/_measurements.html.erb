<%= link_to "Advanced Measurements", '#', 
		class: "hide_advanced_link sizer_button button tiny radius" %>

<div class="row">
	<div class="large-12 columns">
		<h6>Front Rise Size:</h6>
		<input type="text" id="amount-front_rise" style="border: 0; color: #f6931f; font-weight: bold;" />
		<div class="slider-single">
			<div id="slider-front_rise"></div>
		</div><br>
		<%= hidden_field_tag :front_rise, params[:front_rise], value: params[:front_rise] || 10 %>
	</div>
</div>

<br>

