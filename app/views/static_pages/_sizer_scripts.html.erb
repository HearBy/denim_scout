<% content_for :scripts do %>
	<script>
		$(document).ready(function(){
			// $(function() {
			// 	$('#show-slider').click(function(){
			// 		$("#slider-waist").slider({ disabled: false });
			// 	});
			// });

			$(function() {
			    $( "#slider-waist" ).slider({
			      value: [ <%= params[:waist].present? ? params[:waist] : 32 %> ],
			      min: 26,
			      max: 44,
			      step: 1,
			      slide: function( event, ui ) {
			      	$( "#amount-waist" ).val( ui.value + " inches" );
			        $( "#waist" ).val(ui.value);
			      }
			    });
			    $( "#amount-waist" ).val( $( "#slider-waist" ).slider( "value" ) + " inches" );
  			});

			$(function() {
			    $( "#slider-price" ).slider({
			      range: true,
			      min: 0,
			      max: 500,
			      step: 10,
			      values: [ <%= params[:min_price].present? ? params[:min_price] : 0 %>, 
			      			<%= params[:max_price].present? ? params[:max_price] : 500 %> ],
			      slide: function( event, ui ) {
			      	$( "#amount-price" ).val( "$" + ui.values[ 0 ] + " - $" + ui.values[ 1 ] );
			        $( "#min_price" ).val(ui.values[0]);
			        $( "#max_price" ).val(ui.values[1]);
			      }
			    });
			    $( "#amount-price" ).val( "$" + $( "#slider-price" ).slider( "values", 0 ) +
      		" - $" + $( "#slider-price" ).slider( "values", 1 ) );
  			});

  			$(function() {
			    $( "#slider-front_rise" ).slider({
			      value: [ <%= params[:front_rise].present? ? params[:front_rise] : 10 %> ],
			      min: 8,
			      max: 13,
			      step: 0.02,
			      slide: function( event, ui ) {
			      	$( "#amount-front_rise" ).val( ui.value + " inches" );
			        $( "#front_rise" ).val(ui.value);
			      }
			    });
			    $( "#amount-front_rise" ).val( $( "#slider-front_rise" ).slider( "value" ) + " inches" );
  			});

  			$(function() {
			    $( "#slider-thigh" ).slider({
			      value: [ <%= params[:thigh].present? ? params[:thigh] : 11 %> ],
			      min: 9,
			      max: 15,
			      step: 0.02,
			      slide: function( event, ui ) {
			      	$( "#amount-thigh" ).val( ui.value + " inches" );
			        $( "#thigh" ).val(ui.value);
			      }
			    });
			    $( "#amount-thigh" ).val( $( "#slider-thigh" ).slider( "value" ) + " inches" );
  			});

  			$(function() {
			    $( "#slider-knee" ).slider({
			      value: [ <%= params[:knee].present? ? params[:knee] : 8 %> ],
			      min: 6,
			      max: 11,
			      step: 0.02,
			      slide: function( event, ui ) {
			      	$( "#amount-knee" ).val( ui.value + " inches" );
			        $( "#knee" ).val(ui.value);
			      }
			    });
			    $( "#amount-knee" ).val( $( "#slider-knee" ).slider( "value" ) + " inches" );
  			});

  			$(function() {
			    $( "#slider-leg_opening" ).slider({
			      value: [ <%= params[:leg_opening].present? ? params[:leg_opening] : 8 %> ],
			      min: 6,
			      max: 10,
			      step: 0.02,
			      slide: function( event, ui ) {
			      	$( "#amount-leg_opening" ).val( ui.value + " inches" );
			        $( "#leg_opening" ).val(ui.value);
			      }
			    });
			    $( "#amount-leg_opening" ).val( $( "#slider-leg_opening" ).slider( "value" ) + " inches" );
  			});
		})
	</script>
<% end %>