<%= form_tag root_path, :method => 'get', :id => "test", class: "custom" do %>
	<div class="row">
		<div class="large-12 columns">
			<label for="amount-waist">Waist Size:</label>
			<input type="text" id="amount-waist" style="border: 0; color: #f6931f; font-weight: bold;" />
            <div class="slider-single">
                <div id="slider-waist"></div>
            </div><br>
            <%= hidden_field_tag :waist, params[:waist], value: params[:waist] || 32 %>	
		</div>
	</div>

	<br>

	<div class="row">
		<div class="large-12 columns">
			<label for="amount-price">Price range:</label>
			<input type="text" id="amount-price" style="border: 0; color: #f6931f; font-weight: bold;" />
			<div id="slider-price" style="width:90%;"></div>
			<%= hidden_field_tag :min_price, params[:min_price], value: params[:min_price] || 0 %>
			<%= hidden_field_tag :max_price, params[:max_price], value: params[:max_price] || 500 %>
		</div>
	</div>

	<br>

	<div class="row">
		<div class="large-12 columns">
		<!-- <label for="checkbox1">
				<input type="checkbox" id="fit" name="fit[]" value="slim straight" style="display: none;">
				<span class="custom checkbox"></span> 
				Slim Straight
			</label> -->
			<h6>Fit</h6>
			<div>
				<%= check_box_tag 'fit[]', "slim straight", 
						params[:fit] ? params[:fit].include?("slim straight") : false %>
				Slim Straight
			</div>
			<div>	
				<%= check_box_tag 'fit[]', "straight", 
						params[:fit] ? params[:fit].include?("straight") : false %>
				Straight
			</div>
			<div>	
				<%= check_box_tag 'fit[]', "skinny", 
						params[:fit] ? params[:fit].include?("skinny") : false %>
				Skinny
			</div>
			<div>	
				<%= check_box_tag 'fit[]', "tapered", 
						params[:fit] ? params[:fit].include?("tapered") : false %>
				Tapered
			</div>
			<div>	
				<%= check_box_tag 'fit[]', "slim tapered", 
						params[:fit] ? params[:fit].include?("slim tapered") : false %>
				Slim Tapered
			</div>
		</div>
	</div>

	<br>

	<div class="row">
		<div class="large-12 columns">
			<label for="amount-front_rise">Front Rise Size:</label>
			<input type="text" id="amount-front_rise" style="border: 0; color: #f6931f; font-weight: bold;" />
			<div class="slider-single">
				<div id="slider-front_rise"></div>
			</div><br>
			<%= hidden_field_tag :front_rise, params[:front_rise], value: params[:front_rise] || 10 %>
		</div>
	</div>

	<br>

	<div class="row">
		<div class="large-12 columns">
			<label for="amount-thigh">Thigh Size:</label>
			<input type="text" id="amount-thigh" style="border: 0; color: #f6931f; font-weight: bold;" />
			<div class="slider-single">
				<div id="slider-thigh"></div>
			</div><br>
			<%= hidden_field_tag :thigh, params[:thigh], value: params[:thigh] || 11 %>
		</div>
	</div>

	<br>

	<div class="row">
		<div class="large-12 columns">
			<label for="amount-knee">Knee Size:</label>
			<input type="text" id="amount-knee" style="border: 0; color: #f6931f; font-weight: bold;" />
			<div class="slider-single">
				<div id="slider-knee"></div>
			</div><br>
			<%= hidden_field_tag :knee, params[:knee], value: params[:knee] || 8 %>
		</div>
	</div>

	<br>

	<div class="row">
		<div class="large-12 columns">
			<label for="amount-leg_opening">Leg Opening Size:</label>
			<input type="text" id="amount-leg_opening" style="border: 0; color: #f6931f; font-weight: bold;" />
			<div class="slider-single">
				<div id="slider-leg_opening"></div>
			</div><br>
			<%= hidden_field_tag :leg_opening, params[:leg_opening], value: params[:leg_opening] || 8.2 %>
		</div>
	</div>
	
	<br>

	<%= submit_tag "Search", :name => nil, class: "button small radius" %>
<% end %>