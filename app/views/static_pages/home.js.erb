$(".advanced_link").bind('ajax:success', function() { 
	$('.fit_container').hide();
	$('.advanced_link').hide();
	$('.measurements_container').show().html('<%= j render "measurements" %>');

	$(function() {
	    $( "#slider-front_rise" ).slider({
	      value: [ <%= params[:front_rise].present? ? params[:front_rise] : 10 %> ],
	      min: 8,
	      max: 13,
	      step: 0.02,
	      slide: function( event, ui ) {
	      	$( "#amount-front_rise" ).val( ui.value + " inches" );
	        $( "#front_rise" ).val(ui.value);
	      }
	    });
	    $( "#amount-front_rise" ).val( $( "#slider-front_rise" ).slider( "value" ) + " inches" );
	});

	$(function() {
	    $( "#slider-thigh" ).slider({
	      value: [ <%= params[:thigh].present? ? params[:thigh] : 11.5 %> ],
	      min: 9,
	      max: 15,
	      step: 0.02,
	      slide: function( event, ui ) {
	      	$( "#amount-thigh" ).val( ui.value + " inches" );
	        $( "#thigh" ).val(ui.value);
	      }
	    });
	    $( "#amount-thigh" ).val( $( "#slider-thigh" ).slider( "value" ) + " inches" );
	});

	$(function() {
	    $( "#slider-knee" ).slider({
	      value: [ <%= params[:knee].present? ? params[:knee] : 8 %> ],
	      min: 6,
	      max: 11,
	      step: 0.02,
	      slide: function( event, ui ) {
	      	$( "#amount-knee" ).val( ui.value + " inches" );
	        $( "#knee" ).val(ui.value);
	      }
	    });
	    $( "#amount-knee" ).val( $( "#slider-knee" ).slider( "value" ) + " inches" );
	});

	$(function() {
	    $( "#slider-leg_opening" ).slider({
	      value: [ <%= params[:leg_opening].present? ? params[:leg_opening] : 7.5 %> ],
	      min: 6,
	      max: 10,
	      step: 0.02,
	      slide: function( event, ui ) {
	      	$( "#amount-leg_opening" ).val( ui.value + " inches" );
	        $( "#leg_opening" ).val(ui.value);
	      }
	    });
	    $( "#amount-leg_opening" ).val( $( "#slider-leg_opening" ).slider( "value" ) + " inches" );
	});
}); 
